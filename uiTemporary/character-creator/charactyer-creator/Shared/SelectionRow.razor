@using Radzen.Blazor

@if (SelectionMethod == selectionMethod.text) {
   <RadzenTextBox @bind-Value="@Otter.name"></RadzenTextBox>

}
@if (SelectionMethod == selectionMethod.dropdown)
{
    <RadzenRadioButtonList @bind-Value=@Otter.colour TValue="OtterColour">
        <Items>
            <RadzenRadioButtonListItem Text="dark brown fur" Value="OtterColour.dark" />
            <RadzenRadioButtonListItem Text="light brown fur" Value="OtterColour.light" />
        </Items>
    </RadzenRadioButtonList>
}
@if (SelectionMethod == selectionMethod.boolean){
    <RadzenSwitch @bind-Value="Otter.bracelet"></RadzenSwitch>
}

@code {
    [Parameter]
    public selectionMethod SelectionMethod { get; set; } = selectionMethod.text;

    [Parameter]
    public string inputText { get; set; } = "input";

    [Parameter]
    public string[] dropdownValues { get; set; } = { "light", "dark" };

    [Parameter]
    public bool boolSelection { get; set; } = false;

    public enum selectionMethod {
        text,
        dropdown,
        boolean,
    }
}

